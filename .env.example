# Database Configuration
DATABASE_URL=postgresql://todouser:todopass@localhost:5432/todoapp
DATABASE_TEST_URL=sqlite:///:memory:
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=300

# Application Configuration
APP_NAME=Todo API Backend
APP_VERSION=1.0.0
APP_DESCRIPTION=A simple Todo application backend API built with FastAPI and PostgreSQL
DEBUG=false
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# API Configuration
API_PREFIX=
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# CORS Configuration
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production

# Pagination Configuration
DEFAULT_PAGE_SIZE=100
MAX_PAGE_SIZE=1000